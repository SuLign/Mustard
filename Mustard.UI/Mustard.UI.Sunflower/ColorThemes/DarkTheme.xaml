    <SolidColorBrush x:Key="Default_Btn_IsDefault_BorderBrush" Color="#C4E5F6" />

    <SolidColorBrush x:Key="Default_Btn_IsDisable_Foreground" Color="#C4E5F6" />
    <SolidColorBrush x:Key="Default_Btn_IsDisable_Background" Color="#C4E5F6" />
    <SolidColorBrush x:Key="Default_Btn_IsDisable_BorderBrush" Color="#C4E5F6" />

    <!--  Title Bar  -->
    <SolidColorBrush x:Key="MouseOnStatusBar_Btn_Background" Color="#9E4957" />
    <SolidColorBrush x:Key="Border_BorderBrush" Color="#861B2D" />

    <!--  MessageBox Image Color  -->
    <SolidColorBrush x:Key="MessageBoxImage_Warning" Color="#f0f000" />
    <SolidColorBrush x:Key="MessageBoxImage_Question" Color="#9E4957" />
    <SolidColorBrush x:Key="MessageBoxImage_Error" Color="#FF0000" />
